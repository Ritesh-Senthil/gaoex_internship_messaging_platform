# ===========================================
# SUPABASE DATABASE
# ===========================================
# Get these from: Supabase Dashboard → Settings → Database
#
# Direct connection (for migrations):
DATABASE_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres"
#
# Pooled connection (for app - recommended for serverless):
# Use port 6543 and add ?pgbouncer=true for connection pooling
DIRECT_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres"

# ===========================================
# JWT SECRETS
# ===========================================
# Generate with: openssl rand -hex 32
JWT_ACCESS_SECRET="your-access-token-secret-change-in-production"
JWT_REFRESH_SECRET="your-refresh-token-secret-change-in-production"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="30d"

# ===========================================
# FIREBASE AUTH
# ===========================================
# Get from: Firebase Console → Project Settings → General
FIREBASE_PROJECT_ID="your-firebase-project-id"
# Get from: Firebase Console → Project Settings → Service Accounts → Generate new private key
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ===========================================
# SERVER
# ===========================================
NODE_ENV="development"
PORT=3000
CLIENT_URL="http://localhost:8081"

# ===========================================
# SUPER ADMIN (for seeding)
# ===========================================
SUPER_ADMIN_EMAIL="admin@internhub.app"
SUPER_ADMIN_NAME="Super Admin"

# ===========================================
# DEFAULT PROGRAM
# ===========================================
DEFAULT_PROGRAM_NAME="Educational Research Group"
