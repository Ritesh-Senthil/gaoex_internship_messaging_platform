# Database
DATABASE_URL="postgresql://user:password@localhost:5432/internhub?schema=public"

# JWT Secrets
JWT_ACCESS_SECRET="your-access-token-secret-here"
JWT_REFRESH_SECRET="your-refresh-token-secret-here"

# OAuth - Google
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# OAuth - Facebook
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_REGION="us-east-1"

# Email Service (SendGrid or Resend)
EMAIL_SERVICE="sendgrid"
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@internhub.app"

# Redis (optional, for session management)
REDIS_URL="redis://localhost:6379"

# App Configuration
NODE_ENV="development"
PORT=3000
APP_URL="http://localhost:3000"
MOBILE_APP_SCHEME="internhub"

# Super Admin (for seeding)
SUPER_ADMIN_EMAIL="admin@example.com"
